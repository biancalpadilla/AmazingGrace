<div class='container'>
  <div class="panel panel-material-pink" style="width: 80%; margin-left: 105px;">
    <div class="panel-heading">
      <h3 class="panel-title" style="text-align: center; font-size: 28px;">Leaderboard</h3>
    </div>
    <div class="panel-body" style="font-size: 20px;">
      <table class="table table-striped table-hover" style="text-align: center;">
      <thead>
        <tr>
          <th style="text-align: center;">#</th>
          <th style="text-align: center;">User Name</th>
          <th style="text-align: center;">Score</th>
        </tr>
      </thead>
      <tbody>
        <% @users.each_with_index do |user, index| %>
        <tr>
          <td><%= index + 1 %></td>
          <td><%= image_tag avatar_url(user, 35), class: "avatargravatar" %>&nbsp;&nbsp;&nbsp;<%= user.name.split.map(&:capitalize).join(' ') %></td>
          <td><%= user.score %></td>
        </tr>
        <% end %>
      </tbody>
  </table>
      </div>
  </div>
</div>


