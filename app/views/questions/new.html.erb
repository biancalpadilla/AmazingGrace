
<%= form_for @question do |f| %>
<p>
  <%= f.label  :title %>
  <%= f.text_field :title %>
</p>
<p>
  <%= f.label :description %>
  <%= f.text_field :description %>
</p>
<p>
  <%= f.label :tag_list, "Tags (separated by commas)" %>
  <%= f.text_field :tag_list %>
</p>
<p>
  <%= f.submit %>
</p>
<% end %>
<%= link_to "Back", questions_path %>
