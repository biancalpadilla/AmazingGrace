
 <% if @errors %>
<div class="panel panel-danger question-save">
    <div class="panel-heading">
        <h3 class="panel-title">Couldn't save answer</h3>
    </div>
    <div class="panel-body">
      <ul>
        <% @errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
      </ul>
    </div>
</div>
<% end %>

<div class="panel panel-info new-question">
  <div class="panel-heading">
    <h2 class="panel-title"><strong>Add a new answer</strong></h2>
  </div>
  <div class="panel-body">
    <%= form_for [@question, @answer], class: "form-horizontal" do |f| %>

    <div class="form-group">
      <label for="title" class="col-lg-2 control-label">Response</label>
      <div class="col-lg-10">
        <%= f.text_field :response ,class: "form-control"%>
      </div>
    </div>

    <%= button_tag class: "btn btn-material-pink btn-raised pull-right" do %>
        Add new answer
      <div class="ripple-wrapper">
      </div>
    <% end %>
  </div>
  <% end %>
</div>
